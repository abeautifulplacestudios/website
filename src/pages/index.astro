---
import Layout from '../layouts/Layout.astro';
---

<Layout title="A Beautiful Place Studios">
	<main>
		<div class="blobs">
			<span class="blob blob_1">
				<div class="container">
					<img src = "/images/blob_1.svg" alt=""/>
					<span class="text_1">
						An independent game studio that values authenticity + beauty.
					</span>	
				</div>
			</span>
			<span class="blob blob_2">
				<img src = "/images/blob_2.svg" alt=""/>
			</span>
			<span class="blob blob_3">
				<img src = "/images/blob_3.svg" alt=""/>
			</span>
			<span class="blob blob_4">
				<img src = "/images/blob_4.svg" alt=""/>
			</span>
			<span class="blob blob_5">
				<div class="container">
					<img src = "/images/blob_5.svg" alt=""/>
				</div>
			</span>
			<span class="blob logo">
				<img src = "/images/logo.svg" alt=""/>
			</span>
		</div>
	</main>
</Layout>

<style>
	main {
		width: 100%;
		margin: 0 auto;
		display: block;
		height: 100svh;
	}

	.blobs {
		position: relative;
		bottom: 0;
		width: 100%;
		height: 100%;
	}

	span.blob {
		display: inline-flex;
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		margin: 0 auto;
		text-align: left;
	}

	span.blob_1 {
		width: 595px;
		bottom: 410px;
	}

	span.blob_2 {
		width: 156px;
		bottom: 345px;
		left: 85px;
	}

	span.blob_3 {
		width: 245px;
		bottom: 325px;
		left: 430px;
	}

	span.blob_4 {
		width: 227px;
		bottom: 243px;
		left: 74px;
	}

	span.blob_5 {
		width: 164px;
		height: 106px;
		bottom: 159px;
		left: 25px;
	}

	span.logo {
		width: 148px;
	}

	span.text_1 {
		position: absolute;
		top: 43%;
		left: 13%;
		right: 0;
		font-size: 2.8rem;
		transform: rotate(-12deg);
		line-height: 2.3rem;
	}

	span.text_2 {
		position: absolute;
		top: 36%;
		left: 19%;
		right: 0;
		font-size: 1.8rem;
		transform: rotate(5deg);
		line-height: 1.3rem;
	}

	.container {
		position: relative;
	}

	img {
		object-fit: cover;
		position: relative;
	}

	@media only screen and (max-width: 600px) {
		.blobs {
			transform: scale(0.57);
			translate: 0 142px;
		}

		span.blob_1 {
			left: -138px;
		}

		span.blob_3 {
			left: 291px;
		}
	}

</style>
